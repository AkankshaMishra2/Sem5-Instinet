<aside class="sidebar">
    <div class="user-info">
        <div class="user-avatar">
            <i class="fas fa-user-circle fa-3x"></i>
        </div>
        <div class="user-details">
            <h3><%= user.firstName %> <%= user.lastName %></h3>
            <p><%= user.role.charAt(0).toUpperCase() + user.role.slice(1) %></p>
        </div>
    </div>
    <nav class="sidebar-nav">
        <ul>
            <% if (user.role === 'admin') { %>
                <li><a href="/adminDashboard" class="<%= title === 'Dashboard' ? 'active' : '' %>">
                    <i class="fas fa-tachometer-alt"></i> <span>Dashboard</span>
                </a></li>
                <li><a href="#users-section" class="<%= title === 'Users' ? 'active' : '' %>">
                    <i class="fas fa-users"></i> <span>Users</span>
                </a></li>
                <li><a href="#courses-section" class="<%= title === 'Courses' ? 'active' : '' %>">
                    <i class="fas fa-book"></i> <span>Courses</span>
                </a></li>
                <li><a href="#announcements-section" class="<%= title === 'Announcements' ? 'active' : '' %>">
                    <i class="fas fa-bullhorn"></i> <span>Announcements</span>
                </a></li>
                <li><a href="#settings-section" class="<%= title === 'Settings' ? 'active' : '' %>">
                    <i class="fas fa-cog"></i> <span>Settings</span>
                </a></li>
            <% } else if (user.role === 'staff') { %>
                <li><a href="/staffDashboard" class="<%= title === 'Dashboard' ? 'active' : '' %>">
                    <i class="fas fa-tachometer-alt"></i> <span>Dashboard</span>
                </a></li>
                <li><a href="#courses-section" class="<%= title === 'Courses' ? 'active' : '' %>">
                    <i class="fas fa-book"></i> <span>Courses</span>
                </a></li>
                <li><a href="#students-section" class="<%= title === 'Students' ? 'active' : '' %>">
                    <i class="fas fa-user-graduate"></i> <span>Students</span>
                </a></li>
                <li><a href="/announcements" class="<%= title === 'Announcements' ? 'active' : '' %>">
                    <i class="fas fa-bullhorn"></i> <span>Announcements</span>
                </a></li>
                <li><a href="/profile" class="nav-link">
                    <i class="fas fa-user nav-icon"></i>Profile
                </a></li>
            <% } else if (user.role === 'student') { %>
                <li><a href="/studentDashboard" class="<%= title === 'Dashboard' ? 'active' : '' %>">
                    <i class="fas fa-tachometer-alt"></i> <span>Dashboard</span>
                </a></li>
                <li><a href="#courses-section" class="<%= title === 'Courses' ? 'active' : '' %>">
                    <i class="fas fa-book"></i> <span>Courses</span>
                </a></li>
                <li><a href="#grades-section" class="<%= title === 'Grades' ? 'active' : '' %>">
                    <i class="fas fa-chart-line"></i> <span>Grades</span>
                </a></li>
                <li><a href="/announcements" class="<%= title === 'Announcements' ? 'active' : '' %>">
                    <i class="fas fa-bullhorn"></i> <span>Announcements</span>
                </a></li>
                <li><a href="/profile" class="nav-link">
                    <i class="fas fa-user nav-icon"></i>Profile
                </a></li>
            <% } %>
            <li class="logout-item"><a href="/logout">
                <i class="fas fa-sign-out-alt"></i> <span>Logout</span>
            </a></li>
        </ul>
    </nav>
</aside>