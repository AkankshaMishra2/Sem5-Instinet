            <div id="announcements-section" class="dashboard-section">
                <div class="dashboard-section-header">
                    <h2 class="dashboard-section-title">Announcements</h2>
                    <div class="section-actions">
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createAnnouncementModal">
                            <i class="fas fa-plus"></i> Create Announcement
                        </button>
                    </div>
                </div>
                
                <div class="announcements-list">
                    <!-- Announcement data will be loaded here via JavaScript -->
                    <p>Loading announcements...</p>
                </div>
            </div>

            <div class="dashboard-section">
                <h2>All Students</h2>
                <div class="row row-cols-1 row-cols-md-2 g-4">
                    <% students.forEach(student => { %>
                        <div class="col">
                            <div class="card shadow-sm">
                                <div class="card-body">
                                    <h5><%= student.firstName %> <%= student.lastName %> (<%= student.studentDetails?.enrollmentNumber || '-' %>)</h5>
                                    <p>Department: <%= student.studentDetails?.department || '-' %></p>
                                    <p>Courses:</p>
                                    <ul>
